//2
"jest": {
    "reporters": [
      "default",
      "jest-html-reporters"
    ]
}

//3
"jest": {
    "reporters": [
      "default",
      ["jest-html-reporters", {
        "publicPath": "./html-report",
        "filename": "report.html",
        "expand": true,
        "sort": "executionAsc",
        "includeConsoleLog": true,
        "includeFailureMsg": true
      }]
    ]
  }
  
  //4
  "jest": {
    "reporters": [
      "default",
      ["jest-junit", {
        "outputDirectory": "./junit-report",
        "outputName": "junit.xml"
      }]
    ]
  }

  //5
  "jest": {
    "reporters": [
      "default",
      "jest-stare"
    ]
  }

  //6
  "jest": {
    "reporters": [
      "default",
      ["jest-allure", {
        "outputDir": "./allure-report",
        "reporterConfig": {
          "resultsDir": "./allure-results"
        }
      }]
    ]
  }
  